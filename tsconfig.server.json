    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules"]
}